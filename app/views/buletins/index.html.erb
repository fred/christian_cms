<h2>Lista de Boletines</h2>

<table class='nice_table'>
	<thead>
		<tr>
			<td class='heading'><%= link_to "Nombre",  :sort => "title" %></td>
			<td class='heading'><%= link_to "Archivo", :sort => "file_name" %></td>
			<td class='heading'><%= link_to "Fecha",	 :sort => "date" %></td>
		</tr>
	</thead>

	<tbody>
	<% for buletin in @buletins -%>
  	<tr>
			<td class='table_center'><%= buletin.title %> </td>
			<td class='table_center'><%= link_to "Download", buletin.public_filename, :title => buletin.filename %> </td>
			<td class='table_center'><%= l(buletin.created_at, :format => "%d %b, %Y") %> </td>
		</tr>
	<% end %>
	</tbody>

</table>

<br />
<%= will_paginate @buletins, :previous_label => "Anterior", :next_label => "Siguiente" %>
