<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<meta http-equiv="Content-Type" content="text/html;charset=UTF-8" />
	<meta http-equiv="Content-Language" content="es"/>
	<meta name="Language" content="es"/>
	<meta name="keywords" content="<%= Settings.content_keywords %>"/> 
	<meta name="author" content="<%= Settings.content_author %>"/>	
	<meta name="title" content="<%= Settings.meta_title %>"/>	
	<meta name="description" content="<%= Settings.meta_description %>" />
	<link rel="SHORTCUT ICON" href="<%= Settings.favicon %>">
	<title><%= Settings.meta_title %></title>
	<%= javascript_include_tag :defaults %>
	<%= javascript_include_tag 'json'%>
	<%= javascript_include_tag 'cookie' %>
  <%= stylesheet_link_tag 'earth/style' %>
	<%= stylesheet_link_tag 'scaffold' %>
	<%= stylesheet_link_tag 'table' %>
	<%= stylesheet_link_tag 'pagination' %>
	<%= #stylesheet_link_tag 'forms' 
	%>
	<%= stylesheet_link_tag 'ajaxful_rating' %>
	<%= ajaxful_rating_style %>
	<%= auto_discovery_link_tag(:rss, :action => 'index', :format => "rss") %>
  <%= auto_discovery_link_tag(:atom, :action => 'index', :format => "atom") %>
</head>

<body>
  
  <div id="wrapper">
  	<div id="header">
  	  <%= link_to image_tag("/images/logo1.png", :class => "logo_header"), "/" %>
  	  <div id="logo">
  	    <%= link_to image_tag("/images/logo2.png", :class => "logo_header2"), "/" %>
  	  </div>
      <!-- <div id="logo">  
        <h1><a href="#">EarthlingTwo</a></h1>
        <p>by <a href="http://www.nodethirtythree.com">nodethirtythree</a> + <a href="http://www.freecsstemplates.org/">fct</a></p> 
      </div> -->
  	</div>
  	<!-- end #header -->
  	<div id="menu">
	  
  	  <ul>
  	    <!--  <li class="current_page_item"><a href="/">Home</a></li> -->
  		  <% MenuItem.menu_items.each do |t| %>
  		    <li> <%= menu_item_link(t) %> </li>
  		  <% end %>
		  
  			<% if logged_in? %>
  			  <li> <%= link_to ("Logout"), "/logout" %> </li>
  			<% else %>
  			  <li> <%= link_to ("Signup"), signup_url %> </li>
    		  <li> <%= link_to ("Login"), "/login" %> </li>
    		<% end %>
  		
  		</ul>
		
  	</div>
  	<!-- end #menu -->
  	<div id="page">
  		<div id="content">
  		    			
  			<h2 class="flash_notice">
  				<%= flash[:notice] %>
  			</h2>
  			<%= yield %>
			
  			<div style="clear: both;">&nbsp;</div>
			
  		</div>
  		<!-- end #content -->
  		
  		<%= render :partial => "/shared/theme/#{Settings.theme}/side_column"%>
		
  		<div style="clear: both;">&nbsp;</div>
		
  	</div>
  	<!-- end #page -->
	
  </div>

  <!-- Footer start -->
  <%= render :partial => "/shared/theme/#{Settings.theme}/footer"%>
  <!-- end #footer -->

  <%= render :partial => "/shared/stat_counter" %>
  <%= render :partial => "/shared/google_analytics" %>
</body>
</html>
