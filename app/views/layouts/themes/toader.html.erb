<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="es" lang="es">

<% cache('header') do %>
  <%= render :partial => "/shared/header" %>
<% end %>

<body>

	<div id="header">
			<div id="masthead">
			  <%= image_tag"/images/jesus.jpeg", :class => "logo_image"%>
			  <%= link_to image_tag("/images/logo1.png", :class => "logo_header"), "/" %>
			  <%= link_to image_tag("/images/logo2.png", :class => "logo_header2"), "/" %>
			  
				<ul>
				  <% MenuItem.menus.each do |t| %>
				    <li> <%= menu_item_link(t) %> </li>
				  <% end %>
					<% if logged_in? %>
					  <li> <%= link_to _("Logout"), "/logout" %> </li>
					<% else %>
					  <li> <%= link_to _("Signup"), signup_url %> </li>
      		  <li> <%= link_to _("Login"), "/login" %> </li>
      		<% end %>
				</ul>
			</div>
	</div>

	<div id="main">
	
		<div id="content">
		
		  <div class="left_side">
  			<!-- Main Left Side Content -->
  			<h2 class="flash_notice">
  				<%= flash[:notice] %>
  			</h2>
  			<%= yield %>
			</div>

			<!-- Side Column -->
		  <%= render :partial => "/shared/theme/#{Settings.theme}/side_column"%>
		
			<br clear="both"/>
			<p class="blockquote"> 
				"<%= Settings.site_verse %>"
			</p>
			
			<br clear="both"/>
			<%= render :partial => "/shared/google_adsense_hor" %>
		</div>
	
	  <% cache('footer') do %>
		  <%= render :partial => "/shared/theme/#{Settings.theme}/footer" %>
	  <% end %>
	  <p class="small">
	    &nbsp;
	    Powered by: Rails-<%= RAILS_GEM_VERSION %> | 
	    Ruby-<%= RUBY_VERSION %>_p<%= RUBY_PATCHLEVEL %> |
	    Rendered in: <%= sprintf('%f', (Time.now.usec - @start_time.usec).to_f / 1000000) %> seconds |
	  </p>
	
	</div>

  <br clear="both"/>
  <%= render :partial => "/shared/stat_counter" %>
  <%= render :partial => "/shared/google_analytics" %>

</body>
</html>